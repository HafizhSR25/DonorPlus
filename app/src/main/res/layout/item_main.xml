<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/inner_card"
    android:layout_marginTop="8dp"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_item_golongan_darah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A+"
        android:textColor="@color/dark_red"
        android:textSize="18pt"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_item_loc"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_red"
        android:src="@drawable/baseline_location_on_24"
        app:layout_constraintStart_toEndOf="@+id/tv_item_golongan_darah"
        app:layout_constraintTop_toTopOf="@+id/tv_item_golongan_darah" />

    <TextView
        android:id="@+id/tv_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_loc"
        app:layout_constraintStart_toEndOf="@+id/img_item_loc"
        app:layout_constraintTop_toTopOf="@+id/img_item_loc"
        tools:text="Lorem Ipsum" />

    <ImageView
        android:id="@+id/img_item_exp"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintStart_toEndOf="@+id/tv_item_golongan_darah"
        app:layout_constraintTop_toBottomOf="@+id/img_item_loc" />

    <TextView
        android:id="@+id/tv_item_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_exp"
        app:layout_constraintStart_toEndOf="@+id/img_item_exp"
        app:layout_constraintTop_toTopOf="@+id/img_item_exp"
        tools:text="Lorem Ipsum" />

</androidx.constraintlayout.widget.ConstraintLayout>